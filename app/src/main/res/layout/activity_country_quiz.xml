<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryQuizActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="458dp"
        android:layout_height="103dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="60dp"
        android:text="loremIpsum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choiceA"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="26dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/choiceB"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="26dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceA"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/choiceD"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceC"
        app:layout_constraintTop_toBottomOf="@+id/choiceB" />

    <Button
        android:id="@+id/choiceC"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceA" />
</androidx.constraintlayout.widget.ConstraintLayout>