<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exitButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryQuizActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="469dp"
        android:layout_height="63dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="132dp"
        android:gravity="center"
        android:text="loremIpsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countryQuizHeader"
        android:layout_width="469dp"
        android:layout_height="63dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="132dp"
        android:gravity="center"
        android:text="NAME THAT COUNTRY"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choiceA"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#8BC34A"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceB"
        android:layout_width="162dp"
        android:layout_height="54dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="#FFEB3B"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceA"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceD"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#03A9F4"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceC"
        app:layout_constraintTop_toBottomOf="@+id/choiceB"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceC"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F44336"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceA"
        app:strokeWidth="1dp" />

    <ImageButton
        android:id="@+id/exitButtonCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="27dp"
        android:clickable="true"
        android:rotation="180"
        android:onClick="exitQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_logout_24" />
</androidx.constraintlayout.widget.ConstraintLayout>