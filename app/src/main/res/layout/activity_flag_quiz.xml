<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exitButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF6E7"
    tools:context=".FlagQuizActivity">

    <Button
        android:id="@+id/choiceAFlag"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8BC34A"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagView"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceCFlag"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F44336"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceAFlag"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceDFlag"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="#03A9F4"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceCFlag"
        app:layout_constraintTop_toBottomOf="@+id/choiceBFlag"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/choiceBFlag"
        android:layout_width="162dp"
        android:layout_height="54dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F4B908"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/choiceAFlag"
        app:layout_constraintTop_toBottomOf="@+id/flagView"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/flagQuizTitle"
        android:layout_width="239dp"
        android:layout_height="44dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="NAME THAT FLAG"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flagView"
        android:layout_width="240dp"
        android:layout_height="105dp"
        android:layout_marginStart="245dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagQuizTitle"
        app:srcCompat="@drawable/canada" />

    <ImageButton
        android:id="@+id/exitButtonFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="27dp"
        android:rotation="180"
        android:clickable="true"
        android:onClick="exitQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_logout_24" />

    <ImageView
        android:id="@+id/wrongFA"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/wrongFC"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrongFA"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/wrongFB"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toEndOf="@+id/choiceBFlag"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/wrongFD"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/choiceDFlag"
        app:layout_constraintTop_toBottomOf="@+id/wrongFB"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/correctFA"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/correctFC"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrongFA"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/correctFB"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toEndOf="@+id/choiceBFlag"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/correctFD"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/choiceDFlag"
        app:layout_constraintTop_toBottomOf="@+id/wrongFB"
        app:srcCompat="@drawable/ic_done_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>