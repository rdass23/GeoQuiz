<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="menu"
        android:onClick="showPopup"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/learningModeBtn"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="4dp"
        android:onClick="selectLearningMode"
        android:text="SELECT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learningModeText"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/quizModeBtn"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="8dp"
        android:onClick="selectQuizMode"
        android:text="SELECT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizModeText" />

    <TextView
        android:id="@+id/learningModeText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Learning Mode \n\n• View world map\n• Learn facts about countries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quizModeText"
        android:layout_width="149dp"
        android:layout_height="89dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Quiz Mode \n\n• Map Quiz\n• Country Quiz\n• Leaderboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>