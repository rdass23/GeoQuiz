<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResultsActivity">

    <TextView
        android:id="@+id/resultsTitle"
        android:layout_width="315dp"
        android:layout_height="70dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="RESULTS"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_corner_text"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsTitle" />

    <Button
        android:id="@+id/backButtonResults"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="49dp"
        android:text="BACK"
        android:onClick="backButtonResults"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="49dp"
        android:text="PLAY AGAIN"
        android:onClick="playAgain"
        app:layout_constraintStart_toEndOf="@+id/backButtonResults"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="menu"
        android:onClick="showPopup"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

</androidx.constraintlayout.widget.ConstraintLayout>